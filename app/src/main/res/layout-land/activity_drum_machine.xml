<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DrumMachineActivity"
    android:background="#000000">

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="KICK"
        android:id="@+id/button1"
        android:height="50px"
        android:background="@drawable/drum"
        android:layout_above="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:typeface="monospace"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="SNARE"
        android:id="@+id/button2"
        android:background="@drawable/drum"

        android:typeface="monospace"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        android:layout_toEndOf="@+id/button1"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="HAT"
        android:id="@+id/button3"
        android:background="@drawable/drum"

        android:layout_marginRight="51dp"
        android:layout_marginEnd="51dp"
        android:typeface="monospace"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/button2"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="CLAP"
        android:id="@+id/button4"
        android:background="@drawable/drum"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="monospace"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="RIM"
        android:id="@+id/button5"
        android:background="@drawable/drum"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="monospace"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="MARACAS"
        android:id="@+id/button6"
        android:layout_alignTop="@+id/button5"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:background="@drawable/drum"
        android:typeface="monospace"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="COWBELL"
        android:id="@+id/button7"
        android:layout_alignTop="@+id/button6"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:background="@drawable/drum"
        android:typeface="monospace"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="CYMBAL"
        android:id="@+id/button8"
        android:layout_alignTop="@+id/button7"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:background="@drawable/drum"
        android:typeface="monospace"
        android:textColor="#FFFFFF" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kitsBox"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_above="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drum Kit:"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/kitsBox"
        android:layout_toStartOf="@+id/kitsBox"
        android:layout_above="@+id/button3"
        android:textColor="#ffffff"
        android:gravity="center_vertical"
        android:typeface="monospace" />


</RelativeLayout>
